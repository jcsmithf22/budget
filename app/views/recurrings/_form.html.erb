<%= form_with model: recurring do |form| %>
  <div class="recurring__form-container">
    <div class="form__input-container">
      <%= form.label :name %>
      <%= form.text_field :name %>
      <%= error_for recurring, :name %>
    </div>
    <div class="form__input-container">
      <%= form.label :amount %>
      <%= form.text_field :amount %>
      <%= error_for recurring, :amount %>
    </div>
    <div class="form__input-container">
      <%= form.label :day_of_month %>
      <%= form.number_field :day_of_month %>
      <%= error_for recurring, :day_of_month %>
    </div>
    <div class="form__input-container">
      <%= form.label :link %>
      <%= form.text_field :link %>
      <%= error_for recurring, :link %>
    </div>
  </div>
  <div class="form__action-container">
    <%= form.submit class: "btn btn--primary" %>
    <%= link_to "Cancel", recurrings_path, class: "btn" %>
    <% if recurring.persisted? %>
      <label for="<%= dom_id recurring, :destroy %>" class="btn btn--destroy" tabindex="0">Destroy</label>
    <% end %>
  </div>
<% end %>
