<div class="page-header">
  <div class="page-header__total">
    <p>Total</p>
    <p><%= number_to_currency @transactions.sum(&:amount) %></p>
  </div>

  <div class="page-header__controls">
    <%= link_to buckets_path, class: "btn btn--round" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-left">
        <path d="m12 19-7-7 7-7"/>
        <path d="M19 12H5"/>
      </svg>
    <% end %>
    <%#= link_to "Insights", recurrings_insights_path, class: "btn" %>
    <%= link_to "Add transaction", new_transaction_path, class: "btn btn--primary" %>
  </div>
</div>

<ul>
  <% @transactions.each do |transaction| %>
    <li>
      <p>
        <%= transaction.name %>
      </p>
    </li>
  <% end %>
</ul>
