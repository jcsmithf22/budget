<%#= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
<%#= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>

<div class="authentication__container">
  <%= form_with model: @user, url: sign_up_path do |form| %>
    <div class="form__input-container">
      <%= form.email_field :email_address, autofocus: true, autocomplete: "email", placeholder: "Enter your email address" %>
      <%= error_for @user, :email_address %>
    </div>
    <div class="form__input-container">
      <%= form.password_field :password, autocomplete: "new-password", placeholder: "Enter your password", maxlength: 72 %>
      <%= error_for @user, :password %>
    </div>
    <div class="form__input-container">
      <%= form.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm your password", maxlength: 72 %>
      <%= error_for @user, :password_confirmation %>
    </div>
    <div class="form__action-container">
      <%= link_to "Have an account?", login_path %>
      <%= form.submit "Sign in", class: "btn btn--primary" %>
    </div>
  <% end %>
</div>
